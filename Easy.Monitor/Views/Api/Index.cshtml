@model IEnumerable<Easy.Monitor.Application.Models.Api.ApiModel>
@{
    ViewBag.Title = "接口列表";
    Layout = "~/Views/Shared/MainLayout.cshtml";
}
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            @ViewBag.ServiceName - 接口列表
        </h1>
        <ol class="breadcrumb">
            <li><a href="\"><i class="fa fa-th"></i> Home</a></li>
            <li class="active">@ViewBag.ServiceName - 接口列表</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header" style="height:45px">
                        <div class="box-tools">
                            <div class="input-group" style="width: 150px;">
                                <input type="text" name="table_search" class="form-control input-sm pull-right" placeholder="Search">
                                <div class="input-group-btn">
                                    <button class="btn btn-sm btn-default"><i class="fa fa-search"></i></button>
                                </div>
                            </div>
                        </div>
                    </div><!-- /.box-header -->
                    <div class="box-body table-responsive no-padding">
                        <table class="table table-hover">
                            <tr>
                                <th>接口名称</th>
                                <th>节点数量</th>
                                <th>图表</th>
                            </tr>
                            @foreach (var m in Model)
                            {
                                <tr>
                                    <td>@m.Name</td>
                                    <td><a href="/Node/index?name=@m.Name">节点(@ViewBag.NodeCount)</a></td>
                                    <td>
                                        <a class="btn btn-block btn-default" href="/ServiceApiMiniChart/index?api=@m.Name&serviceName=@ViewBag.ServiceName">图表</a>
                                        <a class="btn btn-block btn-default" href="/ServiceApiMiniTable/index?api=@m.Name&serviceName=@ViewBag.ServiceName">表格</a>

                                    </td>
                                </tr>
                            }
                        </table>
                    </div><!-- /.box-body -->
                </div><!-- /.box -->
            </div>
        </div>
    </section><!-- /.content -->
</div>
